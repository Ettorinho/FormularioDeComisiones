<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp. org/xml/ns/javaee"
         xmlns:xsi="http://www.w3. org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Formulario Comisiones</display-name>

    <!-- Parámetros de configuración LDAP -->
    <context-param>
        <param-name>ldap.url</param-name>
        <param-value>ldap://172.25.107.130:389</param-value>
    </context-param>
    
    <context-param>
        <param-name>ldap.baseDn</param-name>
        <param-value>OU=Salud,DC=salud,DC=dga,DC=es</param-value>
    </context-param>
    
    <context-param>
        <param-name>ldap.bindDn</param-name>
        <param-value>CN=Hector Lisa Elvira,OU=Barbastro,OU=Administradores de Nivel 2,DC=salud,DC=dga,DC=es</param-value>
    </context-param>
    
    <context-param>
        <param-name>ldap.dniAttr</param-name>
        <param-value>cn</param-value>
    </context-param>
        
    <!-- Servlet LDAP Lookup -->
    <servlet>
        <servlet-name>LdapLookupServlet</servlet-name>
        <servlet-class>com.comisiones.ldap.LdapLookupServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LdapLookupServlet</servlet-name>
        <url-pattern>/ldapLookup</url-pattern>
    </servlet-mapping>

    <!-- Servlet ComisionController -->
    <servlet>
        <servlet-name>ComisionController</servlet-name>
        <servlet-class>com.comisiones.controller.ComisionController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ComisionController</servlet-name>
        <url-pattern>/comisiones/*</url-pattern>
    </servlet-mapping>

    <!-- Página de bienvenida -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>